<% layout('/layouts/boilerplate') %>

  <div class="row">
    <div class="col-8 offset-2">
      <h2 class="mt-2">Create new listing</h2>
      <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mt-1">
          <label for="title" class="form-label">Title: </label>
          <input type="text" id="title" name="listing[title]" class="form-control" placeholder="Enter title " required>
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mt-2">
          <label for="description" class="form-label">Description: </label>
          <textarea name="listing[description]" id="description" placeholder="Enter a description"
            class="form-control" required></textarea>
            <div class="invalid-feedback">Description should be valid</div>
        </div>

        <div class="mt-2">
          <label for="image" class="form-label">Image:</label>
          <input type="file" class="form-control" name="listing[image]" id="image" required>
        </div>

        <div class="row mt-2">
          <div class="col-4">
            <label for="price" class="form-label">Price: </label>
            <input type="number" id="price" name="listing[price]" class="form-control" placeholder="1200" required>
            <div class="invalid-feedback">Price should be required</div>
          </div>
          <div class="col-8 ">
            <label for="country" class="form-label">Country: </label>
            <input type="text" id="country" name="listing[country]" class="form-control" placeholder="India" required>
            <div class="invalid-feedback">Country should be required</div>
          </div>
        </div>
        <div class="mt-2">
          <label for="location" class="form-label">location: </label>
          <input type="text" id="location" name="listing[location]" class="form-control" placeholder="Indore,India" required>
          <div class="invalid-feedback">Location should be required</div>
        </div>
        <button class="btn btn-success my-2">Create</button>
      </form>
    </div>
  </div>